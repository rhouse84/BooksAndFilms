<!-- 								</g:HTMLPanel> -->
<!-- 							</g:center> -->
<!-- 						</g:DockLayoutPanel> -->
<!-- 					</g:tab> -->
				</g:TabLayoutPanel>
			</g:HTMLPanel>
		</g:center>
    
	</g:DockLayoutPanel>

</ui:UiBinder> 