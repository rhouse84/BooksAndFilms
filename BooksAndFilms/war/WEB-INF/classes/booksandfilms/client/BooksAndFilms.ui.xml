<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui" 
  xmlns:app='urn:import:booksandfilms.client'
  xmlns:booksandfilms='urn:import:booksandfilms.client.view'>
  
	<ui:style src="Resources/GlobalStyles.css" />
    

	<g:DockLayoutPanel unit='EM' styleName='{style.outer}'>
  
		<g:north size='4'>
			<app:HeaderPanel ui:field='headerPanel' />
		</g:north>

		<g:center>
			<g:HTMLPanel styleName='{style.boxPadding}'>
				<g:TabLayoutPanel ui:field="tabPanel" barUnit="PX" barHeight="60" width="100%" height="100%">
					<g:tab>
						<g:header>Books</g:header>
						<g:DockLayoutPanel unit='EM' styleName='{style.outer}'>
							<g:center>
								<g:HTMLPanel styleName='{style.boxPadding}'>
									<g:HTMLPanel ui:field='mainPanel' styleName='{style.mainPanel}' />
								</g:HTMLPanel>
							</g:center>
						</g:DockLayoutPanel>
					</g:tab>
					<g:tab>
						<g:header>Films</g:header>
						<g:DockLayoutPanel unit='EM' styleName='{style.outer}'>
							<g:center>
								<g:HTMLPanel styleName='{style.boxPadding}'>
									<g:HTMLPanel ui:field='mainFilmPanel' styleName='{style.mainPanel}' />
								</g:HTMLPanel>
							</g:center>
						</g:DockLayoutPanel>
					</g:tab>
					<g:tab>
						<g:header>Quotes</g:header>
						<g:DockLayoutPanel unit='EM' styleName='{style.outer}'>
							<g:center>
								<g:HTMLPanel styleName='{style.boxPadding}'>
									<g:HTMLPanel ui:field='mainQuotePanel' styleName='{style.mainPanel}' />
								</g:HTMLPanel>
							</g:center>
						</g:DockLayoutPanel>
					</g:tab>
<!-- 					<g:tab> -->
<!-- 						<g:header>Other Stuff</g:header> -->
<!-- 						<g:DockLayoutPanel unit='EM' styleName='{style.outer}'> -->
<!-- 							<g:center> -->
